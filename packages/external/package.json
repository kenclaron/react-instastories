{
  "name": "@react-instastories/external",
  "version": "1.0.4",
  "description": "External optional components for the next generation of React Stories Library.",
  "author": {
    "name": "Dmitry Britov",
    "email": "kenclaron@gmail.com",
    "url": "https://github.com/kenclaron"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenclaron/react-instastories",
    "directory": "packages/external"
  },
  "bugs": {
    "url": "https://github.com/kenclaron/react-instastories/issues"
  },
  "engines": {
    "yarn": ">=3",
    "node": ">=18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.modern.js"
    },
    "./*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "scripts": {
    "start": "microbundle watch --jsx React.createElement --css-modules \"instastories-[local]\" --no-compress --globals @react-instastories/base=base",
    "build": "microbundle --jsx React.createElement --css-modules \"instastories-[local]\" --globals @react-instastories/base=base"
  },
  "peerDependencies": {
    "@react-instastories/base": "^1.0.4",
    "react": "^16.14.0 || ^17 || ^18 || ^19",
    "react-dom": "^16.14.0 || ^17 || ^18 || ^19"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "microbundle": "^0.15.1",
    "sass": "^1.78.0",
    "typescript": "^5.5.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "front-end",
    "frontend",
    "microfrontend",
    "zero-dependencies",
    "library",
    "react",
    "ui",
    "components",
    "stories",
    "controls",
    "events",
    "hooks"
  ]
}
